<UserControl x:Class="DesctopContactApp.Controls.ContactControlApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesctopContactApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid Background="LightGray">
        <StackPanel>
            <TextBlock Text="Name LastName"
                                       FontSize="20"
                                       x:Name ="nameTextBlock"
                                       FontWeight="Bold"/>
            <TextBlock Text="Example.domen.com"
                                       FontSize="15"
                                        x:Name ="emailTextBlock"
                                       Foreground="DodgerBlue"/>
            <TextBlock Text="123 456 7889"
                                       FontSize="20"
                        x:Name ="phoneTextBlock"
                                       FontStyle="Italic"/>

        </StackPanel>
    </Grid>
</UserControl>
